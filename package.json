{
    "name": "attribute-generator",
    "version": "0.2.5",
    "main": "dist/index.js",
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "prebuild": "npm run clean",
        "build": "npx ncc build ./src/index.ts -o ./dist -m -C",
        "dev": "cross-env NODE_OPTIONS=--enable-source-maps spcx run dist/index.js",
        "debug": "spcx run dist/index.js",
        "prettier": "npx prettier --write .",
        "test": "jest --coverage --passWithNoTests",
        "prepack-zip": "npm ci && npm run build",
        "pack-zip": "spcx package"
    }, 
    "private": true,
    "dependencies": {
        "@sailpoint/connector-sdk": "1.1.35",
        "date-fns": "^4.1.0",
        "sailpoint-api-client": "1.7.0",
        "transliteration": "^2.3.5",
        "uuid": "^13.0.0",
        "velocityjs": "^2.1.5"
    },
    "devDependencies": {
        "@types/assert": "^1.5.11",
        "@types/uuid": "^10.0.0",
        "@vercel/ncc": "^0.34.0",
        "cross-env": "7.0.3",
        "prettier": "^2.3.2",
        "shx": "^0.3.3",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.2.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "@types/jest": "^30.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "clearMocks": true,
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "statements": 60,
                "branches": 50,
                "functions": 40,
                "lines": 60
            }
        }
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
